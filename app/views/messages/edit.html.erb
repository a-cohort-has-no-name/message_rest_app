<h1>Edit Message:</h1>

<%= form_tag "/messages/#{@message.id}", method: :patch do %>
	<div>
		Title: <input type="text" name="title" value="<%= @message.title %>">
	</div>
	<div>
		Body: <input type="text" name="body" value="<%= @message.body %>">
	</div>
	<input type="submit" value="Edit Message">
<% end %>